#!/usr/bin/env perl

use strict;
use warnings;
use Cwd qw(abs_path);
use IO::Socket::UNIX;
use Storable qw(retrieve_fd);

die "$0 must be run as root" unless $> == 0;
die "BLIPTOWN_USER_HOME not defined" unless $ENV{BLIPTOWN_USER_HOME};

my $sock_path = '/tmp/bliptown_helper.sock';
unlink $sock_path if -e $sock_path;

my $server = IO::Socket::UNIX->new(
	Type => SOCK_STREAM,
	Local => $sock_path,
	Listen => 5,
) or die "Cannot create socket: $sock_path ($!)";

my $gid = getgrnam('_bliptown');
chown(0, $gid, $sock_path) || die "Cannot change ownership: $sock_path ($!)";
chmod(0660, $sock_path) || die "Cannot change mode: $sock_path ($!)";

print "Socket created: $sock_path\n";

sub get_uid_gid {
	my $user = shift;
	my $uid = getpwnam($user) || die "Cannot get uid: $user ($!)";
	my $gid = getgrname($user) || die "Cannot get gid: $user ($!)";
	return ($uid, $gid);
}

sub safe_file {
	my ($user, $file) = @_;
	die "Invalid username: $user" unless $user =~ /^[a-zA-Z0-9-_]+$/;
	my $sandbox = $ENV{BLIPTOWN_USER_HOME} . '/' . $user;
	$file = $sandbox . '/' . $file;
	my $file_abs = abs_path($file) || die "Cannot get file: $file ($!)";
	die "File outside of sandbox: $file_abs ($!)"
		unless $file_abs =~ /^\Q$sandbox\E/;
	return $file_abs;
}

sub create_file {
	my $payload = shift;
	my $user = $payload->{username};
	my $file = $payload->{filename};
	my $safe_file = safe_file($user, $file);
	touch $safe_file unless -f $safe_file || die "Cannot create file: $safe_file ($!)";
	my ($uid, $gid) = get_uid_gid($user);
	chown($uid, $gid, $safe_file) || die "Cannot set ownership: $safe_file ($!)";
	chmod(0644, $safe_file) || die "Cannot set permissions: $safe_file ($!)";
}

sub update_file {
	my $payload = shift;
	my $user = $payload->{username};
	my $file = $payload->{filename};
	my $content = $payload->{content};
	create_file($payload);
	if (open(my $fh, '>', $file)) {
		print $fh $content;
		close $fh;
	} else {
		die "Cannot open file: $file ($!)";
	}
}

sub delete_file {
	my $payload = shift;
	my $user = $payload->{username};
	my $file = $payload->{filename};
	my $safe_file = safe_file($user, $file);
	unlink $safe_file if -f $safe_file;
}

my %allowed_commands = (
	create_file => \&create_file,
	update_file => \&update_file,
	delete_file => \&delete_file,
);

while (my $client = $sock->accept()) {
    my $req = fd_retrieve($client->fileno) || die "Cannot read socket ($!)";
	my $command = $req->{command};
	my $payload = $req->{payload};
	my $func = $allowed_commands{$command} || die "Command not permitted: $command ($!)";
	$func->($payload);
    close($client);
}
