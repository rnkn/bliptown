#!/usr/bin/env perl

use strict;
use warnings;
use POSIX qw(setuid);

my $uid;

BEGIN {
	die "$0 must run as root\n" unless $> == 0;
	$uid = getpwnam('_bliptown') || die "Cannot get uid: _bliptown ($!)\n";
	die unless $ENV{BLIPTOWN_CHROOT} || die "BLIPTOWN_CHROOT undefined\n";
	chroot($ENV{BLIPTOWN_CHROOT}) || die "Cannot change root: $ENV{BLIPTOWN_CHROOT} ($!)\n";
}
		
use lib 'lib', 'local/lib/perl5';

BEGIN {
	chdir('/bliptown') || die "Cannot change directory: /bliptown ($!)";
	setuid($uid) || die "Cannot set uid: $uid ($!)";
}

use Mojolicious::Commands;

Mojolicious::Commands->start_app('Bliptown');
