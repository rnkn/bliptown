% layout 'default';
<nav id="blip-nav" class="<%= $nav_style %>">
	<header id="blip-header">
		<%== $header %>
	</header>
	<menu id="blip-menu">
		<%== $sidebar %>
		% if ($c->get_req_user eq 'mayor' && ! $c->session('username')) {
		<ul>
			<li><label for="drawer-toggle">Join/Login</label>
		</ul>
		% }
	</menu>
	<footer id="blip-footer">
		<%== $footer %>
	</footer>
</nav>
<main id="blip-main">
	<%== $content %>
</main>
