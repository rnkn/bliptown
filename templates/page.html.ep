% layout 'default';
<nav class="<%= $nav_style %>">
	<header>
		<%== $header %>
	</header>
	<menu>
		<%== $menu %>
		% if ($c->get_req_user eq 'mayor' && ! $c->session('username')) {
		<ul>
			<li><label for="drawer-toggle">Join/Login</label>
		</ul>
		% }
	</menu>
	% if ($nav_style eq 'sidebar') {
	<footer class="sidebar">
		<%== $footer %>
	</footer>
	% }
</nav>
<main>
	<%== $content %>
	% if ($nav_style eq 'topbar') {
	<footer class="topbar">
		<%== $footer %>
	</footer>
	% }
</main>
