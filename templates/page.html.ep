<label id="menu-toggle" class="button" for="menu-toggle"></label>
<div id="sidebar">
	<header>
		<%== $header %>
	</header>
	<nav>
		<%== $sidebar %>
		% if ($c->get_user eq 'mayor' && ! $c->session('username')) {
