% layout 'default';
% if ($show_sidebar) {
<nav>
	<header>
		%== $header
	</header>
	<menu>
		%== $menu
		% if ($c->get_req_user eq 'mayor' && ! $c->session('username')) {
		<ul>
			<li><label for="drawer-toggle">Join/Login</label>
		</ul>
		% }
	</menu>
	<footer>
		%== $footer
	</footer>
</nav>
% }
<main>
	% unless ($show_sidebar) {
	<header>
		%== $header
	</header>
	% }
	%== $content
	% unless ($show_sidebar) {
	<footer>
		%== $footer
	</footer>
	% }
</main>
